<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

    <ImageView
        android:id="@+id/avatar_id"
        android:layout_width="0.71in"
        android:layout_height="0.71in"
        android:src="@mipmap/ic_launcher"
        android:background="@color/whiteColor"/>
    <TextView
        android:id="@+id/name_id"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:text="Channel Name"
        android:textColor="@color/blue"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginLeft="125dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_views"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="125dp" />
    <TextView
        android:id="@+id/view_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="148dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/ic_thumb_up_black_18dp" />
    <TextView
        android:id="@+id/like_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="148dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_thumb_down_black_18dp" />
    <TextView
        android:id="@+id/dislike_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="148dp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_comments"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="265dp"/>
    <TextView
        android:id="@+id/comment_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="288dp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/ic_upload_date" />
    <TextView
        android:id="@+id/date_create_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="79dp"
        android:layout_marginLeft="288dp"/>


</RelativeLayout>
</android.support.v7.widget.CardView>