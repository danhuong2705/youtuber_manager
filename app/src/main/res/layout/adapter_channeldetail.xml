<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

    <ImageView
        android:id="@+id/avatar_id"
        android:layout_width="0.71in"
        android:layout_height="0.66in"
        android:src="@mipmap/ic_launcher"
        android:background="@color/whiteColor"/>
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/name_id"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Channel Name"
        android:textColor="@color/red"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"/>
    <ImageView
        android:id="@+id/remove_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/remove"
        android:layout_marginLeft="347dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_playlists"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"/>
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/playlist_id"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="156dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_views" />
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/view_id"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="156dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_people_black_24dp" />
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/subcribe_id"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="93dp"
        android:layout_marginLeft="156dp"/>


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_videos"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="255dp"/>
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/videos_id"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="285dp"/>


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_upload_date" />
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/date_create_id"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="13dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="285dp"/>


</RelativeLayout>
</android.support.v7.widget.CardView>