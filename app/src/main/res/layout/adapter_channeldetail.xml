<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar_id"
        android:layout_width="0.71in"
        android:layout_height="0.71in"
        android:src="@mipmap/ic_launcher"
        android:background="@color/whiteColor"/>
    <TextView
        android:id="@+id/name_id"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:text="Channel Name"
        android:textColor="@color/blackColor"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_playlists"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-280dp" />
    <TextView
        android:id="@+id/playlist_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="3dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_views" />
    <TextView
        android:id="@+id/view_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="3dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-148dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_people_black_24dp" />
    <TextView
        android:id="@+id/subcribe_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="3dp"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_videos"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/videos_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="3dp"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-149dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_upload_date" />
    <TextView
        android:id="@+id/date_create_id"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1000 views"
        android:textColor="@color/blackColor"
        android:textSize="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="3dp"/>


</LinearLayout>